<?xml version="1.0" encoding="utf-8"?>
<Containers>
  <TemplateURL>https://raw.githubusercontent.com/tremblex/blex-docker-templates/master/tremblex/nexus-api.xml</TemplateURL>
  <Beta>False</Beta>
  <Category>Tools:</Category>
  <Name>nexus-api</Name>
  <Description>
    WARNING: do not run this in bridge mode. Currently only supports port 80, if hosted with bridge, Unraid might be unnaccessible. Host on another IP to prevent problems.
  </Description>
  <Overview>
    Nexus Api Overview
  </Overview>
  <Support>https://github.com/Tremblex/</Support>
  <ReadMe>https://github.com/Tremblex/blex-nexus</ReadMe>
  <Registry>https://ghcr.io/tremblex/nexus-api:latest</Registry>
  <GitHub>https://github.com/binhex/arch-syncthing</GitHub>
  <Repository>ghcr.io/tremblex/nexus-api</Repository>
  <Project>https://github.com/Tremblex/blex-nexus</Project>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>5000</HostPort>
        <ContainerPort>80</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Environment>
	<Variable>
      <Name>AppConfig__FileHostingRepositoryConfig__ApiUrl</Name>
      <Value>http://nexus-api-staging/</Value>
    </Variable>
	<Variable>
      <Name>AppConfig__SecurityConfig__EncryptionKey</Name>
      <Value>8d0325f04da0c8aca4c3f993e27d6838b211f547329c80e74708842b6c687b1d</Value>
    </Variable>
	<Variable>
      <Name>AppConfig__SecurityConfig__TokenExpirationInDays</Name>
      <Value>30</Value>
    </Variable>
    <Variable>
      <Name>NexusDbConfig__DatabaseType</Name>
      <Value>MSSQL</Value>
    </Variable>
    <Variable>
      <Name>NexusDbConfig__ConnectionString</Name>
      <Value>TODO</Value>
    </Variable>
	<Variable>
      <Name>AuthDbConfig__DatabaseType</Name>
      <Value>MSSQL</Value>
    </Variable>
    <Variable>
      <Name>AuthDbConfig__ConnectionString</Name>
      <Value>TODO</Value>
    </Variable>
    <Variable>
      <Name>ASPNETCORE_ENVIRONMENT</Name>
      <Value>Development</Value>
    </Variable>
    <Variable>
      <Name>PUID</Name>
      <Value>99</Value>
    </Variable>
    <Variable>
      <Name>PGID</Name>
      <Value>100</Value>
    </Variable>
  </Environment>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/config</HostDir>
      <ContainerDir>/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/data</HostDir>
      <ContainerDir>/mnt/data</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <WebUI>http://[IP]:[PORT:80]/swagger/index.html</WebUI>
  <Icon>https://avatars.githubusercontent.com/u/5077439?v=4</Icon>
  <ExtraParams></ExtraParams>
</Containers>